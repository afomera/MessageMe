<div class="row">
  <div class="col-sm-3">
    <h1>Send a message</h1>
    <%= render 'messages/form' %>
  </div>
  <div class="col-sm-3 col-sm-offset-1">
    <h1>Contacts</h1>
    <% @user.contacts.each do |contact| %>
      <%= contact.full_name_with_phone %>
      <hr>
    <% end %>
  </div>
  <div class="col-sm-3 col-sm-offset-1">
    <h1>Groups</h1>
    <% @user.groups.each do |group| %>
      <%= group.name %>
      <hr>
    <% end %>
  </div>

</div>
