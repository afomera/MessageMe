<%= form_for (@group) do |f| %>
  <% if @group.errors.any? %>
  <h3 class="text-center">Whoops! Please fix the following errors!</h3>
    <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: 'Group name', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_field :description, placeholder: 'What is this group for?', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.button "Save Group", class: "btn btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving group..."} %>
  </div>
<% end %>
